<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.SocialMediaIntegration" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_munsell</item>
        <item name="colorPrimaryVariant">@color/red_ruby</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_star_command</item>
        <item name="colorSecondaryVariant">@color/blue_usafa</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:enforceStatusBarContrast">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Navigation bar color. -->
        <item name="android:enforceNavigationBarContrast">false</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar">true</item>
        <!-- Customize your theme here. -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorControlNormal">?colorOnSurface</item>
        <item name="android:windowBackground">?colorSurface</item>
    </style>
</resources>